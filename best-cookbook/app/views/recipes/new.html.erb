<h1>Add a Recipe</h1>

<%= form_for @recipe do |f| %>
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>
    
    <p><%= f.label :content %>
    <%= f.text_area :content %></p>

    <p><%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name, prompt: true %></p>

    <p><%= f.submit %></p>
<% end %>