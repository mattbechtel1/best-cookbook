<h1><%= "#{@user.name}'s Recipes" %></h1>

<ol>
    <% @user.recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
    <% end %>
</ol>

<h3><%= "#{@user.name}'s Allergies" %></h3>
    <ul>
        <% @user.ingredients.each do |ing_allergy| %>
            <li><%= ing_allergy.name %></li>
        <% end %>
    </ul>

<%= button_to "Delete this User", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete #{@user.name}?"} %>